<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :person_name %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, id: :person_birthdate, :start_year=>1900 %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age, id: :person_age %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :person_address %>
  </div>

  <div class="field">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, :value => params[:id], :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :contact_num %>
    <%= form.text_field :contact_num, id: :person_contact_num %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
